BootStrap: debootstrap
OSVersion: trusty
MirrorURL: http://us.archive.ubuntu.com/ubuntu/


%runscript
   echo "This is what happens when you run the container..."

%post
    sed -i 's/$/ universe/' /etc/apt/sources.list
    apt-get update
    apt-get -y --force-yes install build-essential cmake make zlib1g-dev python python-dev python-setuptools git wget libbz2-dev unzip libblas-dev liblapack-dev gfortran
    easy_install pip
    pip install numpy cython
    wget https://github.com/J35P312/SVDB/archive/2.2.0.zip
    unzip 2.2.0.zip
    mv SVDB-2.2.0 bin/
    cd /bin/SVDB-2.2.0/ && pip install -e .
